package main

templ home() {
	<html>
		<head>
			<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, minimal-ui"/>
			<script type="module" src="https://cdn.jsdelivr.net/gh/starfederation/datastar@v1.0.0-beta.1/bundles/datastar.js"></script>
			<link
				rel="stylesheet"
				media="(prefers-color-scheme:light)"
				href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.19.1/cdn/themes/light.css"
			/>
			<link
				rel="stylesheet"
				media="(prefers-color-scheme:dark)"
				href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.19.1/cdn/themes/dark.css"
				onload="document.documentElement.classList.add('sl-theme-dark');"
			/>
			<script type="module" src="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.19.1/cdn/shoelace-autoloader.js"></script>
		</head>
		<body>
			<div>
				<div><span id="clients" data-on-load="@get('/clients')"></span></div>
				<div data-signals="{messages: '', responses: ''}">
					<p data-on-load="@get('/messages')"></p>
					<p id="responses"></p>
					<p data-text="$responses"></p>
					<p data-text="$messages"></p>
					<input data-bind-message/>
					<button data-on-keydown__window="evt.key === 'Enter' && @post('/chat')" data-on-click="@post('/chat')">submit</button>
				</div>
				<div>
					<template>
						<p>Reactive form controls</p>
						<input data-bind-input type="checkbox" data-on-load="@get('/checkbox')"/>
					</template>
				</div>
			</div>
			<img src="/qrcode.png"/>
		</body>
	</html>
}
